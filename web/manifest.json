{
  "manifest_version": 2,
  "name": "VoteBoxUI",
  "short_name": "VoteBoxUI",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "39",

  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    "storage",
    "fileSystem",
    "*://*/*"
  ],

  "file_handlers": {
    "any": {
      "types": [
        "*"
      ]
    }
  },

  "kiosk_enabled" : true,
  "kiosk_only" : true
}

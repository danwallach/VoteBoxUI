{
  "manifest_version": 2,
  "name": "VoteBoxUI-VoteFlipping",
  "short_name": "VoteFlippingUI",
  "description": "",
  "version": "0.0.2",
  "minimum_chrome_version": "39",

  "icons": {
    "16": "vote16.png",
    "128": "vote128.png"
  },

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    "storage",
    "fileSystem",
    "*://*/*",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc"
  ],

  "file_handlers": {
    "any": {
      "extensions": [
        "xml"
      ]
    }
  },

  "kiosk_enabled" : true
}
